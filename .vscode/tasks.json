{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make All",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "make -C Src clean all"
    },
    {
      "label": "nasm: Compile and Link Current File",
      "group": {
        "kind": "build"
      },
      "type": "shell",
      "command": "nasm -f bin -o ${fileDirname}${pathSeparator}${fileBasenameNoExtension}.com -l ${fileDirname}${pathSeparator}${fileBasenameNoExtension}.lst ${file}"
    }
  ]
}
